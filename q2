
#(arquivo conversor.py)

def celsius_para_fahrenheit(C):
    return (C * 9/5) + 32

def fahrenheit_para_celsius(F):
    return (F - 32) * 5/9

# Q2 - Conversor de Temperatura
# Conversão entre Celsius e Fahrenheit
# Obrigração: criar um arquivo conversor.py e importar as funções

import conversor as conv

print("Conversor de Temperatura")
print("1. Celsius para Fahrenheit")
print("2. Fahrenheit para Celsius")
opcao = int(input("Escolha uma opção (1 ou 2): "))

if opcao == 1:
    celsius = float(input("Digite a temperatura em Celsius: "))
    print(f'{conv.celsius_para_fahrenheit(celsius)}')
elif opcao == 2:
    fahrenheit = float(input("Digite a temperatura em Fahrenheit: "))
    print(f'{conv.fahrenheit_para_celsius(fahrenheit)}')
else:
    print("Opção inválida.")
